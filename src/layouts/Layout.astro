---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import site from '../data/site.json';

type Props = {
  title?: string;
  description?: string;
  noindex?: boolean;
  heroTitle?: string;
  heroLead?: string;
};

const { title, description, noindex, heroTitle, heroLead } = Astro.props as Props;

const pageTitle = title
  ? `${title} | ${site.shortName}`
  : `${site.shortName} - ${site.tagline}`;

const pageDescription = description ?? site.description;

const canonicalUrl = Astro.site
  ? new URL(Astro.url.pathname, Astro.site).toString()
  : Astro.url.toString();

const ogImageUrl = Astro.site
  ? new URL('/images/brand/logo.webp', Astro.site).toString()
  : 'https://amstch.com/images/brand/logo.webp';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@0,9..144,400;0,9..144,600;0,9..144,700;1,9..144,400&family=Inter:wght@400;500;600;700&display=swap" />
    <meta name="generator" content={Astro.generator} />

    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <link rel="canonical" href={canonicalUrl} />
    {noindex ? <meta name="robots" content="noindex,nofollow" /> : null}

    <meta property="og:site_name" content={site.shortName} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="512" />
    <meta property="og:image:height" content="512" />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:image" content={ogImageUrl} />
  </head>
  <body class="flex min-h-screen flex-col">
    <a class="skip-link" href="#main">Skip to content</a>

    <Header currentPath={Astro.url.pathname} />

    {heroTitle ? (
      <div class="hero-band">
        <div class="container-page">
          <h1>{heroTitle}</h1>
          {heroLead ? <p class="hero-lead">{heroLead}</p> : null}
        </div>
      </div>
    ) : null}

    <main id="main" class="flex-1">
      <slot />
    </main>

    <Footer />

    <a
      href="#main"
      id="back-to-top"
      class="back-to-top fixed bottom-6 right-6 z-30 rounded-full border bg-white px-4 py-2 text-sm font-medium shadow-md no-underline opacity-0 pointer-events-none transition-opacity focus:opacity-100 focus:pointer-events-auto"
      style="border-color: var(--color-border); color: var(--color-text-muted);"
      aria-label="Back to top"
    >
      Back to top
    </a>

    <script>
      (function () {
        const maybeEl = document.getElementById('back-to-top');
        if (!(maybeEl instanceof HTMLElement)) return;
        const el = maybeEl;
        const showAfter = 400;
        function update() {
          if (window.scrollY > showAfter) {
            el.classList.add('back-to-top-visible');
          } else {
            el.classList.remove('back-to-top-visible');
          }
        }
        window.addEventListener('scroll', update, { passive: true });
        window.addEventListener('load', update);
      })();
    </script>
  </body>
</html>
