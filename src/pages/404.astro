---
import Layout from '../layouts/Layout.astro';
import site from '../data/site.json';
---

<Layout title="Page not found" description="The page you requested was not found." noindex>
  <div class="section-band">
    <div class="container-page text-center">
      <div class="mx-auto max-w-md">
        <div class="text-6xl" aria-hidden="true">üîç</div>
        <h1 class="mt-4 text-2xl font-bold" style="color: var(--color-neutral-900);">Page Not Found</h1>
        <p class="mt-2 text-sm" style="color: var(--color-neutral-600);">
          The page you requested could not be found. It may have been moved or the link may be incorrect.
        </p>
        <div class="mt-6 flex flex-wrap justify-center gap-3">
          <a class="btn btn-primary" href="/">Go Home</a>
          <a class="btn btn-outline" href="/contact">Contact Us</a>
        </div>
        <div class="mt-8">
          <p class="text-xs font-semibold uppercase tracking-wider" style="color: var(--color-neutral-500);">Or try one of these</p>
          <div class="mt-3 flex flex-wrap justify-center gap-2">
            <a class="chip" href="/parent-resources">Parent Resources</a>
            <a class="chip" href="/admissions">Admissions</a>
            <a class="chip" href="/fees-hours">Fees & Hours</a>
            <a class="chip" href="/calendar">Calendar</a>
            <a class="chip" href="/educators">Educators</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
