---
import Layout from '../layouts/Layout.astro';
import resources from '../data/resources.json';
import ExternalLink from '../components/ExternalLink.astro';
import PageNav from '../components/PageNav.astro';
import Icon from '../components/Icon.astro';
import StudentRegistrationButton from '../components/StudentRegistrationButton.astro';
import { siteConfig } from '../config/siteConfig';

const pageNavLinks = [
  { id: 'documents', label: 'Documents' },
  { id: 'registration-onboarding', label: 'Registration & Onboarding' },
  { id: 'learning-resources', label: 'Learning Resources' },
];
---

<Layout
  title="Parent Resources"
  description="Parent handbook, downloads, and helpful links for Auburn Montessori School - The Children's House."
  heroTitle="Parent Resources"
  heroLead="Access school documents, Brightwheel onboarding links, and learning resources."
>
  <div class="section-band">
    <div class="container-page">
      <PageNav links={pageNavLinks} />

      <h2 id="documents" class="section-heading">Documents</h2>
      <p class="section-subheading">Use the dedicated Documents page for local PDFs and Brightwheel updates.</p>
      <div class="mt-5 card card-body">
        <div class="flex items-center gap-3">
          <div class="feature-icon"><Icon name="document" size={22} /></div>
          <div>
            <h3 class="text-sm font-bold" style="color: var(--color-text);">View documents</h3>
            <p class="text-xs" style="color: var(--color-text-subtle);">
              Parent Handbook, calendar updates, and other school documents.
            </p>
          </div>
        </div>
        <div class="mt-4">
          <a href="/documents" class="btn btn-primary btn-sm">Open Documents Page</a>
        </div>
      </div>
    </div>
  </div>

  <div class="section-band-alt">
    <div class="container-page grid gap-8 lg:grid-cols-2">
      <div>
        <h2 id="registration-onboarding" class="section-heading">Registration &amp; Onboarding</h2>
        <p class="section-subheading">Brightwheel links for parent onboarding and student registration</p>
        <div class="mt-5 space-y-4">
          <ExternalLink
            href={siteConfig.brightwheel.parentSignInUrl}
            opensIn="Brightwheel"
            class="card card-body flex items-center gap-3 no-underline hover:shadow-md transition-shadow"
            ariaLabel="Parent Sign-In (opens in Brightwheel)"
          >
            <div class="feature-icon shrink-0"><Icon name="external" size={22} /></div>
            <div>
              <div class="text-sm font-semibold" style="color: var(--color-neutral-900);">Parent Sign-In (Brightwheel)</div>
            </div>
          </ExternalLink>
          <div class="card card-body">
            <div class="flex items-center gap-3">
              <div class="feature-icon shrink-0"><Icon name="edit" size={22} /></div>
              <div>
                <div class="text-sm font-semibold" style="color: var(--color-neutral-900);">Student Registration (Brightwheel)</div>
              </div>
            </div>
            <div class="mt-4">
              <StudentRegistrationButton buttonClass="btn btn-primary btn-sm" helperClass="text-xs" />
            </div>
          </div>
        </div>
      </div>

      <div>
        <h2 id="learning-resources" class="section-heading">Learning Resources</h2>
        <p class="section-subheading">Informational links for parents</p>
        <div class="mt-5 space-y-3">
          {resources.listsAndLearning.map((item) =>
            item.external ? (
              <ExternalLink
                href={item.href}
                opensIn={'opensIn' in item && typeof item.opensIn === 'string' && item.opensIn ? item.opensIn : 'new tab'}
                class="card card-body flex items-center gap-3 no-underline hover:shadow-md transition-shadow"
              >
                <div class="feature-icon shrink-0"><Icon name="external" size={22} /></div>
                <div>
                  <div class="text-sm font-semibold" style="color: var(--color-neutral-900);">{item.label}</div>
                </div>
              </ExternalLink>
            ) : (
              <a
                href={item.href}
                class="card card-body flex items-center gap-3 no-underline hover:shadow-md transition-shadow"
              >
                <div class="feature-icon shrink-0"><Icon name="document" size={22} /></div>
                <div>
                  <div class="text-sm font-semibold" style="color: var(--color-neutral-900);">{item.label}</div>
                </div>
              </a>
            )
          )}
        </div>
      </div>
    </div>
  </div>
</Layout>
