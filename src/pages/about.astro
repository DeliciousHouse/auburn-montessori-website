---
import Layout from '../layouts/Layout.astro';
import home from '../data/home.json';
import about from '../data/about.json';
import Accordion from '../components/Accordion.astro';
import Icon from '../components/Icon.astro';
---

<Layout
  title="About"
  description="Learn about Auburn Montessori School - The Children's House: philosophy, mission, vision, purpose, and Montessori approach."
  heroTitle="About Our School"
  heroLead="Auburn Montessori School - The Children's House is a Montessori community serving children and families in Auburn, Alabama since 1997."
>
  <!-- Philosophy / Mission / Vision -->
  <div class="section-band">
    <div class="container-page">
      <div class="grid gap-6 lg:grid-cols-3">
        <div class="card card-body">
          <div class="badge badge-brand mb-3">Philosophy</div>
          <p class="text-sm leading-relaxed" style="color: var(--color-neutral-700);">{home.philosophy}</p>
        </div>
        <div class="card card-body">
          <div class="badge badge-brand mb-3">Mission</div>
          <ul class="space-y-2 text-sm leading-relaxed" style="color: var(--color-neutral-700);">
            {home.missions.map((m) => (
              <li class="flex gap-2">
                <span class="shrink-0 mt-1" style="color: var(--color-brand-primary);">â€¢</span>
                <span>{m}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="card card-body">
          <div class="badge badge-brand mb-3">Vision</div>
          <p class="text-sm leading-relaxed" style="color: var(--color-neutral-700);">{home.vision}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Purpose + Objectives -->
  <div class="section-band-alt">
    <div class="container-page grid gap-8 lg:grid-cols-2">
      <div>
        <h2 class="section-heading">Purpose</h2>
        <p class="section-subheading">What drives us every day</p>
        <div class="mt-5 space-y-4 text-sm leading-relaxed" style="color: var(--color-neutral-700);">
          {about.purpose.map((p) => <p>{p}</p>)}
        </div>
      </div>

      <div>
        <h2 class="section-heading">Objectives</h2>
        <p class="section-subheading">How we put our purpose into practice</p>
        <div class="mt-5">
          {about.objectives.map((o, i) => (
            <Accordion id={`objective-${i}`} defaultOpen={i === 0}>
              <span slot="title">Objective {i + 1}</span>
              {o}
            </Accordion>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- Montessori in practice feature list -->
  <div class="section-band">
    <div class="container-page">
      <h2 class="section-heading text-center">Montessori in Practice</h2>
      <p class="section-subheading mx-auto text-center">How the Montessori approach shapes daily learning at our school</p>

      <div class="mt-8 feature-grid">
        <div class="feature-item">
          <div class="feature-icon"><Icon name="document" size={22} /></div>
          <div>
            <h3 class="text-sm font-bold" style="color: var(--color-text);">Prepared Environment</h3>
            <p class="mt-1 text-xs leading-relaxed" style="color: var(--color-neutral-600);">Classrooms are designed for exploration, independence, and purposeful work.</p>
          </div>
        </div>
        <div class="feature-item">
          <div class="feature-icon"><Icon name="clock" size={22} /></div>
          <div>
            <h3 class="text-sm font-bold" style="color: var(--color-text);">Uninterrupted Work Cycle</h3>
            <p class="mt-1 text-xs leading-relaxed" style="color: var(--color-neutral-600);">Students have extended time and space to practice lessons individually or in small groups.</p>
          </div>
        </div>
        <div class="feature-item">
          <div class="feature-icon"><Icon name="people" size={22} /></div>
          <div>
            <h3 class="text-sm font-bold" style="color: var(--color-text);">Peace Education</h3>
            <p class="mt-1 text-xs leading-relaxed" style="color: var(--color-neutral-600);">Educators guide children toward inner discipline and peace through purposeful engagement.</p>
          </div>
        </div>
        <div class="feature-item">
          <div class="feature-icon"><Icon name="people" size={22} /></div>
          <div>
            <h3 class="text-sm font-bold" style="color: var(--color-text);">Whole-Child Development</h3>
            <p class="mt-1 text-xs leading-relaxed" style="color: var(--color-neutral-600);">Nurturing the physical, emotional, social, spiritual, and mental capacities of each child.</p>
          </div>
        </div>
        <div class="feature-item">
          <div class="feature-icon"><Icon name="document" size={22} /></div>
          <div>
            <h3 class="text-sm font-bold" style="color: var(--color-text);">Scientific Observation</h3>
            <p class="mt-1 text-xs leading-relaxed" style="color: var(--color-neutral-600);">Educators observe each child to understand their unique needs and adapt accordingly.</p>
          </div>
        </div>
        <div class="feature-item">
          <div class="feature-icon"><Icon name="people" size={22} /></div>
          <div>
            <h3 class="text-sm font-bold" style="color: var(--color-text);">Home Away from Home</h3>
            <p class="mt-1 text-xs leading-relaxed" style="color: var(--color-neutral-600);">A warm, loving environment where each child is respected as a unique individual.</p>
          </div>
        </div>
      </div>

      <p class="mt-8 text-center text-sm">
        <a href="/montessori-work-cycle" class="font-semibold no-underline hover:underline">
          Learn about the Montessori work cycle
        </a>
      </p>
    </div>
  </div>
</Layout>
