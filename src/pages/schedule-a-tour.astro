---
import Layout from '../layouts/Layout.astro';
import ExternalLink from '../components/ExternalLink.astro';
import StudentRegistrationButton from '../components/StudentRegistrationButton.astro';
import { siteConfig } from '../config/siteConfig';
import site from '../data/site.json';
---

<Layout
  title="Schedule a Tour & Register"
  description="Two easy steps: schedule a 30-minute tour, then complete student registration in Brightwheel."
  heroTitle="Schedule a Tour & Register"
  heroLead="A simple two-step admissions flow for new families."
>
  <div class="section-band">
    <div class="container-page">
      <div class="stepper">
        <section class="stepper-step">
          <div class="stepper-number">1</div>
          <h2 class="stepper-title">Schedule a tour</h2>
          <p class="stepper-detail">
            Tours are 30 minutes and include time to see classrooms, ask questions, and learn what a Montessori day looks like.
          </p>
          <ul class="mt-3 space-y-2 text-sm" style="color: var(--color-neutral-700);">
            <li class="flex gap-2"><span aria-hidden="true">•</span><span>Tour times: 2:30pm–5:00pm, by appointment.</span></li>
            <li class="flex gap-2"><span aria-hidden="true">•</span><span>Call <a class="font-semibold" href={`tel:${site.phone}`}>{site.phone}</a> or use the <a class="font-semibold" href="/contact#tour-request-form">tour request form</a>.</span></li>
          </ul>
        </section>

        <section class="stepper-step">
          <div class="stepper-number">2</div>
          <h2 class="stepper-title">Register</h2>
          <p class="stepper-detail">
            Complete student registration in Brightwheel after your tour. Parent onboarding and sign-in are also handled in Brightwheel.
          </p>
          <div class="mt-4 flex flex-wrap gap-3">
            <StudentRegistrationButton buttonClass="btn btn-primary btn-lg" helperClass="text-xs" />
            <ExternalLink href={siteConfig.brightwheel.parentSignInUrl} opensIn="Brightwheel" class="btn btn-outline btn-lg" ariaLabel="Parent Sign-In (opens in Brightwheel)">
              Parent Sign-In (Brightwheel)
            </ExternalLink>
          </div>
        </section>
      </div>
    </div>
  </div>
</Layout>
