---
import Layout from '../layouts/Layout.astro';
import educatorsData from '../data/educators.json';
---

<Layout
  title="Educators"
  description="Meet the educators and staff at Auburn Montessori School - The Children's House."
>
  <header class="space-y-3">
    <h1 class="text-3xl font-extrabold tracking-tight text-slate-900">Educators</h1>
    <p class="max-w-4xl text-base leading-relaxed text-slate-700">{educatorsData.intro}</p>
  </header>

  <section class="mt-10 grid gap-6 md:grid-cols-2">
    {educatorsData.educators.map((e) => (
      <article class="card p-6">
        <div class="flex flex-wrap items-center justify-between gap-3">
          <h2 class="text-lg font-bold text-slate-900">{e.name}</h2>
          {e.role ? <span class="badge">{e.role}</span> : null}
        </div>

        <div class="mt-3 space-y-2 text-sm text-slate-700">
          {e.since ? <p><span class="font-semibold text-slate-900">Since:</span> {e.since}</p> : null}
          {e.preferredName ? (
            <p><span class="font-semibold text-slate-900">Preferred name:</span> {e.preferredName}</p>
          ) : null}
          {e.pronouns ? <p><span class="font-semibold text-slate-900">Pronouns:</span> {e.pronouns}</p> : null}
          {e.hours ? <p><span class="font-semibold text-slate-900">Hours:</span> {e.hours}</p> : null}
        </div>

        {e.bio?.length ? (
          <div class="mt-4 space-y-2 text-sm leading-relaxed text-slate-700">
            {e.bio.map((p) => <p>{p}</p>)}
          </div>
        ) : null}

        {e.education?.length ? (
          <details class="mt-4">
            <summary class="cursor-pointer text-sm font-semibold text-blue-800">Education</summary>
            <ul class="mt-2 list-disc space-y-1 pl-5 text-sm text-slate-700">
              {e.education.map((i) => <li>{i}</li>)}
            </ul>
          </details>
        ) : null}

        {e.credentialsAndTraining?.length ? (
          <details class="mt-3">
            <summary class="cursor-pointer text-sm font-semibold text-blue-800">Credentials and training</summary>
            <ul class="mt-2 list-disc space-y-1 pl-5 text-sm text-slate-700">
              {e.credentialsAndTraining.map((i) => <li>{i}</li>)}
            </ul>
          </details>
        ) : null}

        {e.links?.length ? (
          <div class="mt-4 flex flex-wrap gap-3">
            {e.links.map((l) => (
              <a
                class="text-sm font-semibold no-underline text-blue-800 hover:text-blue-900"
                href={l.href}
                target={l.external ? '_blank' : undefined}
                rel={l.external ? 'noopener noreferrer' : undefined}
              >
                {l.label}{l.external ? ' (opens in a new tab)' : ''}
              </a>
            ))}
          </div>
        ) : null}
      </article>
    ))}
  </section>
</Layout>

