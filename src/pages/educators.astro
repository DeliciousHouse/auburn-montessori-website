---
import Layout from '../layouts/Layout.astro';
import educatorsData from '../data/educators.json';
import site from '../data/site.json';
---

<Layout
  title="Educators"
  description="Meet the educators and staff at Auburn Montessori School - The Children's House."
>
  <header class="space-y-3">
    <h1 class="text-3xl font-extrabold tracking-tight text-slate-900">Educators</h1>
    <p class="max-w-4xl text-base leading-relaxed text-slate-700">{educatorsData.intro}</p>
    <p class="text-sm text-slate-600">
      For questions about our staff or programs, please contact the school at <a class="font-semibold no-underline text-blue-800 hover:text-blue-900" href={`mailto:${site.email}`}>{site.email}</a> or <a class="font-semibold no-underline text-blue-800 hover:text-blue-900" href={`tel:${site.phone}`}>{site.phone}</a>.
    </p>
  </header>

  <section class="mt-10 grid gap-6 md:grid-cols-2">
    {educatorsData.educators.map((e) => {
      const showEducationMore = e.education && e.education.length > 3;
      const educationFirst = showEducationMore ? e.education!.slice(0, 3) : (e.education ?? []);
      const educationRest = showEducationMore ? e.education!.slice(3) : [];
      const showCredsMore = e.credentialsAndTraining && e.credentialsAndTraining.length > 3;
      const credsFirst = showCredsMore ? e.credentialsAndTraining!.slice(0, 3) : (e.credentialsAndTraining ?? []);
      const credsRest = showCredsMore ? e.credentialsAndTraining!.slice(3) : [];
      return (
      <article class="card p-6">
        <div class="flex flex-wrap items-center justify-between gap-3">
          <h2 class="text-lg font-bold text-slate-900">{e.name}</h2>
          {e.role ? <span class="badge">{e.role}</span> : null}
        </div>

        <div class="mt-3 space-y-2 text-sm text-slate-700">
          {e.since ? <p><span class="font-semibold text-slate-900">Since:</span> {e.since}</p> : null}
          {e.preferredName ? (
            <p><span class="font-semibold text-slate-900">Preferred name:</span> {e.preferredName}</p>
          ) : null}
          {e.pronouns ? <p><span class="font-semibold text-slate-900">Pronouns:</span> {e.pronouns}</p> : null}
          {e.hours ? <p><span class="font-semibold text-slate-900">Hours:</span> {e.hours}</p> : null}
        </div>

        {e.education?.length ? (
          <details class="mt-4 educator-details">
            <summary class="cursor-pointer text-sm font-semibold text-[var(--color-brand-primary)]">Education</summary>
            <ul class="mt-2 list-disc space-y-1 pl-5 text-sm text-slate-700">
              {educationFirst.map((i) => <li>{i}</li>)}
            </ul>
            {showEducationMore ? (
              <details class="mt-2 ml-0">
                <summary class="cursor-pointer list-none text-sm font-medium text-slate-600">More ({educationRest.length} more)</summary>
                <ul class="mt-1 list-disc space-y-1 pl-5 text-sm text-slate-700">
                  {educationRest.map((i) => <li>{i}</li>)}
                </ul>
              </details>
            ) : null}
          </details>
        ) : null}

        {e.credentialsAndTraining?.length ? (
          <details class="mt-3 educator-details">
            <summary class="cursor-pointer text-sm font-semibold text-[var(--color-brand-primary)]">Credentials and training</summary>
            <ul class="mt-2 list-disc space-y-1 pl-5 text-sm text-slate-700">
              {credsFirst.map((i) => <li>{i}</li>)}
            </ul>
            {showCredsMore ? (
              <details class="mt-2 ml-0">
                <summary class="cursor-pointer list-none text-sm font-medium text-slate-600">More ({credsRest.length} more)</summary>
                <ul class="mt-1 list-disc space-y-1 pl-5 text-sm text-slate-700">
                  {credsRest.map((i) => <li>{i}</li>)}
                </ul>
              </details>
            ) : null}
          </details>
        ) : null}

        {e.bio?.length ? (
          <details class="mt-3 educator-details">
            <summary class="cursor-pointer text-sm font-semibold text-[var(--color-brand-primary)]">Bio</summary>
            <div class="mt-2 space-y-2 text-sm leading-relaxed text-slate-700">
              {e.bio.map((p) => <p>{p}</p>)}
            </div>
          </details>
        ) : null}

        {e.links?.length ? (
          <div class="mt-4 flex flex-wrap gap-3">
            {e.links.map((l) => (
              <a
                class="text-sm font-semibold no-underline text-[var(--color-brand-primary)] hover:underline"
                href={l.href}
                target={l.external ? '_blank' : undefined}
                rel={l.external ? 'noopener noreferrer' : undefined}
              >
                {l.label}{l.external ? ' (opens in a new tab)' : ''}
              </a>
            ))}
          </div>
        ) : null}
      </article>
    );})}
  </section>
</Layout>

