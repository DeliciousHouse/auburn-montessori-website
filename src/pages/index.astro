---
import Layout from '../layouts/Layout.astro';
import ImageCarousel from '../components/ImageCarousel.astro';
import home from '../data/home.json';
import site from '../data/site.json';
import carousel from '../data/carousel.json';
---

<Layout title="Home" description="Welcome to Auburn Montessori School - The Children's House. A Montessori community serving children ages 3â€“6 in Auburn, Alabama.">
	<!-- Hero -->
	<section class="hero-band">
		<div class="container-page grid gap-8 lg:grid-cols-2 lg:items-center">
			<div>
				<p class="badge-accent mb-4 inline-flex items-center rounded-full px-3 py-1 text-xs font-semibold" style="background: rgba(255,255,255,0.15); color: white;">{home.heroKicker}</p>
				<h1>{home.heroTitle}</h1>
				<p class="hero-lead">A Montessori community nurturing the love of learning for children ages 3â€“6 in Auburn, Alabama. Everything you need â€” handbook, calendar, fees, and registration â€” in one place.</p>
			</div>
			<div class="hidden lg:block">
				<ImageCarousel
					id="home-carousel"
					label="School photo carousel"
					images={carousel.slides}
				/>
			</div>
		</div>
	</section>

	<!-- Trust bar -->
	<div style="background: var(--color-neutral-50); border-bottom: 1px solid var(--color-neutral-200);">
		<div class="container-page flex flex-wrap items-center justify-center gap-x-6 gap-y-2 py-3 text-sm" style="color: var(--color-neutral-600);">
			<a class="flex items-center gap-1.5 no-underline hover:underline" style="color: var(--color-neutral-600);" href="/contact">
				<span aria-hidden="true">ğŸ“</span> {site.address.street}, {site.address.city}, {site.address.state}
			</a>
			<a class="flex items-center gap-1.5 no-underline hover:underline" style="color: var(--color-neutral-600);" href={`tel:${site.phone}`}>
				<span aria-hidden="true">ğŸ“</span> {site.phone}
			</a>
			<span class="flex items-center gap-1.5">
				<span aria-hidden="true">ğŸ“</span> Ages 3â€“6
			</span>
			<span class="badge badge-brand">Quality STARS 5-STAR</span>
		</div>
	</div>

	<!-- Mobile carousel (visible on smaller screens) -->
	<div class="section-band lg:hidden">
		<div class="container-page">
			<ImageCarousel
				id="home-carousel-mobile"
				label="School photo carousel"
				images={carousel.slides}
			/>
		</div>
	</div>

	<!-- Quick links card grid -->
	<div class="section-band">
		<div class="container-page">
			<div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-5">
				<a href="/parent-resources" class="card card-body flex flex-col items-start gap-2 no-underline hover:shadow-md transition-shadow">
					<div class="feature-icon">ğŸ“‹</div>
					<h2 class="text-sm font-bold" style="color: var(--color-neutral-900);">Parent Handbook</h2>
					<p class="text-xs" style="color: var(--color-neutral-500);">View or download the full handbook</p>
				</a>
				<a href="/calendar" class="card card-body flex flex-col items-start gap-2 no-underline hover:shadow-md transition-shadow">
					<div class="feature-icon">ğŸ“…</div>
					<h2 class="text-sm font-bold" style="color: var(--color-neutral-900);">Calendar</h2>
					<p class="text-xs" style="color: var(--color-neutral-500);">Key dates, closures, and events</p>
				</a>
				<a href="/fees-hours" class="card card-body flex flex-col items-start gap-2 no-underline hover:shadow-md transition-shadow">
					<div class="feature-icon">ğŸ’°</div>
					<h2 class="text-sm font-bold" style="color: var(--color-neutral-900);">Fees &amp; Hours</h2>
					<p class="text-xs" style="color: var(--color-neutral-500);">Tuition, schedules, and policies</p>
				</a>
				<a href="/educators" class="card card-body flex flex-col items-start gap-2 no-underline hover:shadow-md transition-shadow">
					<div class="feature-icon">ğŸ‘©â€ğŸ«</div>
					<h2 class="text-sm font-bold" style="color: var(--color-neutral-900);">Educators</h2>
					<p class="text-xs" style="color: var(--color-neutral-500);">Meet our experienced team</p>
				</a>
				<a href={site.registrationUrl} target="_blank" rel="noopener noreferrer" class="card card-body flex flex-col items-start gap-2 no-underline hover:shadow-md transition-shadow" style="background: var(--color-brand-primary-light); border-color: rgba(30,58,95,0.15);">
					<div class="feature-icon" style="background: var(--color-brand-primary); color: white;">âœï¸</div>
					<h2 class="text-sm font-bold" style="color: var(--color-brand-primary);">Register</h2>
					<p class="text-xs" style="color: var(--color-neutral-500);">New parent registration (Brightwheel) â†—</p>
				</a>
			</div>
		</div>
	</div>

	<!-- Philosophy / Mission / Vision -->
	<div class="section-band-alt">
		<div class="container-page">
			<h2 class="section-heading text-center">Our Foundation</h2>
			<p class="section-subheading mx-auto text-center">The guiding principles that shape our Montessori community</p>

			<div class="mt-8 grid gap-6 lg:grid-cols-3">
				<div class="card card-body">
					<div class="badge badge-brand mb-3">Philosophy</div>
					<p class="text-sm leading-relaxed" style="color: var(--color-neutral-700);">{home.philosophy}</p>
					<p class="mt-4">
						<a class="text-sm font-semibold no-underline hover:underline" href="/about">Read more â†’</a>
					</p>
				</div>

				<div class="card card-body">
					<div class="badge badge-brand mb-3">Mission</div>
					<ul class="space-y-2 text-sm leading-relaxed" style="color: var(--color-neutral-700);">
						{home.missions.map((m) => (
							<li class="flex gap-2">
								<span class="shrink-0 mt-1" style="color: var(--color-brand-primary);">â€¢</span>
								<span>{m}</span>
							</li>
						))}
					</ul>
				</div>

				<div class="card card-body">
					<div class="badge badge-brand mb-3">Vision</div>
					<p class="text-sm leading-relaxed" style="color: var(--color-neutral-700);">{home.vision}</p>
				</div>
			</div>
		</div>
	</div>

	<!-- CTA band -->
	<div class="section-band">
		<div class="container-page">
			<div class="cta-panel text-center" style="padding: 2.5rem;">
				<h2 class="text-xl font-bold">Ready to join our community?</h2>
				<p class="mx-auto mt-2 max-w-md text-sm" style="color: rgba(255,255,255,0.8);">
					Schedule a tour, learn about our admissions process, or register today.
				</p>
				<div class="mt-5 flex flex-wrap justify-center gap-3">
					<a class="btn btn-primary" href="/admissions">Admissions Process</a>
					<a class="btn btn-outline" style="border-color: rgba(255,255,255,0.3); color: white; background: transparent;" href="/contact">Contact Us</a>
				</div>
			</div>
		</div>
	</div>
</Layout>
