---
type PageNavItem = { id: string; label: string };

type Props = {
  links: PageNavItem[];
  ariaLabel?: string;
  class?: string;
};

const { links, ariaLabel = 'On this page', class: className = '' } = Astro.props;
---

<nav
  class:list={['rounded-xl border py-3 px-4 mb-6', className]}
  style="border-color: var(--color-border);"
  aria-label={ariaLabel}
>
  <div class="mb-2 text-xs font-semibold uppercase tracking-wider" style="color: var(--color-text-subtle);">
    On this page
  </div>
  <ul class="flex flex-wrap gap-x-4 gap-y-1 text-sm">
    {links.map((item) => (
      <li>
        <a href={`#${item.id}`} class="no-underline hover:underline" style="color: var(--color-text-muted);">
          {item.label}
        </a>
      </li>
    ))}
  </ul>
</nav>
